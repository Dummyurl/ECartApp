<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILYourName"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtYourName"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_person_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_green_24dp"
            android:hint="@string/name_text"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILAddress"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtAddressLineOne"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_email_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_green_24dp"
            android:hint="@string/your_address_one"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILAddressTwo"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtAddressLineTwo"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_email_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_green_24dp"
            android:hint="@string/your_address_two"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILCity"
            fontPath="fonts/nova.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MyTextAppearance"
            tools:ignore="UnusedAttribute">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtCity"
                fontPath="fonts/nova.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="10dp"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor"
                tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILZip"
            fontPath="fonts/nova.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MyTextAppearance"
            tools:ignore="UnusedAttribute">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtZip"
                fontPath="fonts/nova.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="10dp"
                android:hint="@string/zip"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor"
                tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILState"
            fontPath="fonts/nova.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MyTextAppearance"
            tools:ignore="UnusedAttribute">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtState"
                fontPath="fonts/nova.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="10dp"
                android:hint="@string/state"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor"
                tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tILCountry"
            fontPath="fonts/nova.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:focusedByDefault="false"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/MyTextAppearance"
            tools:ignore="UnusedAttribute">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtCountry"
                fontPath="fonts/nova.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style"
                android:drawablePadding="10dp"
                android:hint="@string/country"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimary"
                android:textCursorDrawable="@drawable/cursor"
                tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNextStep"
        fontPath="fonts/nova-bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:text="@string/next_step"
        android:textAllCaps="true"
        android:textColor="@color/white"
        tools:ignore="MissingPrefix" />

</LinearLayout>
