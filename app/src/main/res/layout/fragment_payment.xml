<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnCard"
            fontPath="fonts/nova-bold.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/color_accent_shadow_bg"
            android:text="@string/card_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,MissingPrefix" />

        <Button
            android:id="@+id/btnPayPal"
            fontPath="fonts/nova-bold.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/color_primary_shadow_bg"
            android:text="@string/paypal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,MissingPrefix" />

        <Button
            android:id="@+id/btnCod"
            fontPath="fonts/nova-bold.ttf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/color_primary_shadow_bg"
            android:text="@string/cod"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="ButtonStyle,MissingPrefix" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILCardName"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtCardName"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_person_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_green_24dp"
            android:hint="@string/card_name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILCardNumber"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtCardNumber"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_credit_card_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_credit_card_green_24dp"
            android:hint="@string/card_number"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILDate"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtExpiryDate"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_date_range_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_date_range_green_24dp"
            android:hint="@string/expiry_date"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tILCvc"
        fontPath="fonts/nova.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusedByDefault="false"
        android:textColorHint="@color/colorPrimary"
        app:hintTextAppearance="@style/MyTextAppearance"
        tools:ignore="UnusedAttribute">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtCvc"
            fontPath="fonts/nova.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style"
            android:drawableLeft="@drawable/ic_fiber_pin_green_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_fiber_pin_green_24dp"
            android:hint="@string/cvc"
            android:inputType="number"
            android:maxLength="3"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/cursor"
            tools:ignore="LabelFor,MissingPrefix,RtlSymmetry" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnFinishOrder"
        fontPath="fonts/nova-bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:text="@string/finish_order"
        android:textAllCaps="true"
        android:textColor="@color/white"
        tools:ignore="MissingPrefix" />

</LinearLayout>